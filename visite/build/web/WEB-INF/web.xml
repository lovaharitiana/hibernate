<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>MedecinController</servlet-name>
        <servlet-class>controller.MedecinController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientController</servlet-name>
        <servlet-class>controller.PatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisiterController</servlet-name>
        <servlet-class>controller.VisiterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedecinController</servlet-name>
        <url-pattern>/MedecinController/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientController</servlet-name>
        <url-pattern>/PatientController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisiterController</servlet-name>
        <url-pattern>/VisiterController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
